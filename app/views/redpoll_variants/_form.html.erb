<% if @redpoll_variant.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@redpoll_variant.errors.count, t('error')) %> </h2>
 
        <ul>
        <% @redpoll_variant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
 <% end %>

<%= form_for @redpoll_variant do |f| %>
  <%= f.hidden_field :redpoll_question_id %>
  <div><%= f.text_field :val, :maxlength => "255" %></div>
  <div style="margin-top:20px;">
    <div style="display:inline;">
      <%= f.submit %>
    </div>
    <div style="display:inline;margin-left:5px;">
      <%= link_to t('cancel'), redpoll_variants_path(@redpoll_variant.redpoll_question) %>
    </div>
  </div>
<% end %>  
